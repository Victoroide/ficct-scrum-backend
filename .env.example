SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

DATABASE_URL=postgresql://username:password@localhost:5432/ficct_scrum_db

JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# AWS S3 Configuration (Optional - fallback to local storage if not provided)
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# AWS SES Email Configuration (uses S3 region by default)
USE_SES=True
AWS_SES_REGION_NAME=us-east-1
DEFAULT_FROM_EMAIL=noreply@ficct-scrum.com
AWS_SES_RETURN_PATH=

FRONTEND_URL=http://localhost:4200

# Redis Configuration (Railway or Docker)
# For Railway (production):
CACHE_REDIS_URL=redis://default:password@redis.railway.internal:6379/2
CHANNEL_LAYERS_REDIS_URL=redis://default:password@redis.railway.internal:6379/3
CELERY_BROKER_URL=redis://default:password@redis.railway.internal:6379/0
CELERY_RESULT_BACKEND=redis://default:password@redis.railway.internal:6379/1

# For Docker (local development):
# CACHE_REDIS_URL=redis://:redis123@redis:6379/2
# CHANNEL_LAYERS_REDIS_URL=redis://:redis123@redis:6379/3
# CELERY_BROKER_URL=redis://:redis123@redis:6379/0
# CELERY_RESULT_BACKEND=redis://:redis123@redis:6379/1

# AI Features (OPTIONAL - for semantic search and assistant features)
# NOTE: Pinecone requires Unix/Linux or Docker (not supported on Windows natively)
# Get API keys from: https://app.pinecone.io/ and https://azure.microsoft.com/openai/
OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=ficct-scrum-issues

# GitHub OAuth Integration (OPTIONAL)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_OAUTH_CALLBACK_URL=http://localhost:8000/api/v1/integrations/github/oauth/callback/